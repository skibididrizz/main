{
  "name": "@skibididrizz/main",
  "version": "0.1.17",
  "packageManager": "yarn@4.3.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@typespec/compiler": "^0.57.0",
    "typescript": "^5.5.3"
  },
  "scripts": {
    "env": "env",
    "fix": "echo \"npmAuthToken: \"${NPM_TOKEN}\"\" >> .yarnrc.yml",
    "build": "yarn workspaces foreach -A run build",
    "test": "yarn workspaces foreach -A run test",
    "snapshot": "yarn workspaces foreach -A run test:snapshot",
    "$version": "yarn workspace foreach -A version --new-version $npm_package_version",
    "release": "yarn build && yarn site && yarn bump ${0}",
    "docs": "yarn workspaces foreach -A run docs",
    "site": "yarn workspace @skibididrizz/site build-site"
  }
}
