{
  "name": "@skibididrizz/main",
  "packageManager": "yarn@4.3.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@typespec/compiler": "^0.57.0",
    "typescript": "^5.5.2"
  },
  "scripts": {
    "fix": "echo \"npmAuthToken: \"${NPM_TOKEN}\"\" >> .yarnrc.yml",
    "build": "yarn workspaces foreach --all run build",
    "bump": "yarn version ${0} && yarn workspace @skibididrizz/drizzle version ${0} && git commit -am \"v${0}\" && git tag v${0}",
    "site": "yarn workspace @skibididrizz/drizzle docs &&  workspace @skibididrizz/site build"
  }
}
